generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Professor {
  id        String  @id @default(uuid())
  firstName String  @default("John")
  lastName  String  @default("Doe")
  events    Event[]

  @@unique(name: "fullName", [firstName, lastName])
}

model Event {
  id          String      @id @default(uuid())
  title       String
  description String?
  startTime   String
  endTime     String
  days        String[]
  eventType   EventType   @default(CLASS)
  professorId String
  professor   Professor   @relation(fields: [professorId], references: [id], onDelete: Cascade)
}

enum EventType {
  CLASS
  MEETING
}
